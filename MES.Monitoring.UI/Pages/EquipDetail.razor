@page "/equip/{EquipId:int}"
@inject MesApiService MesApiService

<h3>Equip Detail</h3>

<div class = "mb-2">
    <label>
        <input type="checkbox" @bind="ActiveOnly" />
        Active Only (not cleared)
    </label>

    <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="ReloadAlarms">
        Refresh
    </button>
</div>

@if (Alarm == null)
{
    <p>*-Loading alrams-*</p>
}
else if (Alarm.Count == 0)
{
    <p>No Alarms</p>
}
else 
{
    <table class = "table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Message</th>
                <th>Level</th>
                <th>Created</th>
                <th>Ack</th>
                <th>Clear</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var alarm in Alarms)
        {
            <tr>
                <td>@alarm.Code</td>
                <td>@alarm.Message</td>
                <td>@alarm.Level</td>
                <td>@alarm.CreatedAt</td>
                <td>@(alarm.AckAt == null ? "-" : alarm.AckAt.ToString("HH:mm:ss"))</td>
                <td>@(alarm.ClearAt == null ? "-" : alarm.ClearAt.ToString("HH:mm:ss"))</td>
                <td>
                    <button class = "btn btn-sm btn-outline-primary"
                        disabled = "@(alarm.AckAt != null || alarm.ClearAt != null)"
                        @onclick = "() => OnAck(alarm.AlarmId)">
                        ACK
                    </button>
                    <button class = "btn btn-sm btn-outline-primary"
                            disabled = "@(alarm.ClearAt != null)"
                            @onclick = "() => OnClear(alarm.AlarmId)">
                            Clear
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
@code 
{
    [Parameter] public int EquipId { get; set; }
    public List<AlarmDto>? Alarms {get; set; }
    private bool ActiveOnly { get; set; } = true;
    private List<MES.Monitoring.UI.Models.AlarmDto>? Alarms;
    
    protected override async Task OnInitializedAsync()
    {
        //TODO:
        await ReloadAlarms();
    }
    private async Task OnAck(int alarmId)
    {
        await Api.AckAlarmAsync(alarmId); //Ack Api 호출
        await ReloadAlarms(); //UI 갱신
    }
    private async Task ReLoadAlarms()
    {
        //TODO:
        Alarms = await Api.GetAlarmsAsync(EquipId, ActiveOnly);
        StateHasChanged();
    }
    private async Task OnClear(int alarmId)
    {
        //Clear Api 호출
        await Api.ClearAlarmAsync(alarmId);
        //UI 갱신
        await ReloadAlarms();
    }
    public class AlarmDto
    {
        public int AlarmId { get; set; }
        public string Code { get; set; } = "";
        public string Message { get; set; } = "";
        public string Level { get; set; } = "";
        public DateTime CreatedAt { get; set; }
        public DateTime? AckAt { get; set; }
        public DateTime? ClearAt { get; set; }
    }
}